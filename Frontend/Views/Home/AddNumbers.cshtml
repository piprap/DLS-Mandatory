}

<div class="text-center">
    <h1 class="display-4">Add two numbers.</h1>
    <h3>Add</h3>
    <form action="javascript:void(0);" method="POST" onsubmit="postAddition()">
        <input type="number" id="inputone" placeholder="inputone">
